<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".physic.vaz.Area1"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/main_background">

	<include
		layout="@layout/action_bar"/>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
            
            <include
                layout="@layout/clear_button"/>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="@dimen/dp250"
					android:background="@drawable/background_1"
					android:orientation="horizontal"
					android:gravity="top"
					android:layout_marginTop="@dimen/dp_40">

					<LinearLayout
						android:id="@+id/dados"
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_marginTop="@dimen/dp40"
						android:layout_gravity="left">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/dd"
							android:textSize="18sp"
							android:textColor="@color/textColor"
							android:layout_gravity="center"/>

						<LinearLayout
							android:orientation="horizontal"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/dp10">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/flowRatep"
								android:textSize="18sp"
								android:textColor="@color/textColor"/>

							<EditText
								android:id="@+id/vaz"
								android:layout_width="wrap_content"
								android:inputType="numberDecimal"
								android:textColor="@color/textColor"
								android:hint="@string/nullDouble"
								android:layout_height="wrap_content"
								android:ems="3"/>

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/speedmcps"
								android:textColor="@color/textColor"
								android:textSize="18sp"/>

						</LinearLayout>

                       
						<LinearLayout
							android:orientation="horizontal"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/dp10"
							android:layout_gravity="top|left">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/speedp"
								android:textColor="@color/textColor"
								android:textSize="18sp"/>

							<EditText
								android:id="@+id/vel"
								android:layout_width="wrap_content"
								android:inputType="numberDecimal"
								android:layout_height="wrap_content"
								android:textColor="@color/textColor"
								android:ems="3"
								android:hint="@string/nullDouble"/>

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/speedmps"
								android:textColor="@color/textColor"
								android:textSize="18sp"/>

						</LinearLayout>

						<LinearLayout
							android:orientation="horizontal"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/dp10">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/area"
								android:textColor="@color/textColor"
								android:textSize="18sp"/>

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/wht"
								android:textColor="@color/textColor"
								android:textSize="18sp"/>

						</LinearLayout>

					</LinearLayout>

					<LinearLayout
						android:id="@+id/formula"
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/dp40"
						android:layout_alignParentEnd="true"
						android:layout_gravity="right"
						android:layout_marginEnd="@dimen/dp20">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/fm"
							android:textSize="20sp"
							android:textColor="@color/textColor"
							android:layout_gravity="center"/>

						<TextView
							android:id="@+id/area"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/fluid_flow_area1_formula"
							android:textSize="19sp"
							android:layout_gravity="center"
							android:background="@drawable/edge_btn_1"
							android:ems="4"
							android:gravity="center"
							android:paddingStart="@dimen/dp5"
							android:textColor="@color/textColor"
							android:paddingEnd="@dimen/dp5"/>

					</LinearLayout>

				</RelativeLayout>

			</RelativeLayout>

			<LinearLayout
				android:id="@+id/resulucao"
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/dp75"
				android:layout_centerHorizontal="true"
				android:background="@drawable/background_1"
				android:paddingLeft="@dimen/dp10"
				android:paddingRight="@dimen/dp10"
				android:layout_marginTop="@dimen/dp192">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/res"
					android:textSize="18sp"
					android:textColor="@color/textColor"
					android:layout_gravity="center"/>

				<HorizontalScrollView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal">

					<TextView
						android:id="@+id/res"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/textColor"
						android:textSize="18sp"/>

				</HorizontalScrollView>

			</LinearLayout>

		</RelativeLayout>

</LinearLayout>

