<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".physic.vaz.Speed2"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<include
		layout="@layout/action_bar"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="top">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="280dp"
				android:background="@drawable/background_1"
				android:orientation="horizontal"
				android:gravity="top"
				android:layout_marginTop="-40dp">

				<LinearLayout
					android:id="@+id/dados"
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_marginTop="40dp"
					android:layout_gravity="left">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/dd"
						android:textSize="20sp"
						android:layout_gravity="center"/>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/flowRatep"
							android:textSize="19sp"/>

						<EditText
							android:id="@+id/vaz"
							android:layout_width="wrap_content"
							android:inputType="numberDecimal"
							android:layout_height="wrap_content"
							android:ems="3"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/speedmcps"
							android:textSize="18sp"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/rayp"
							android:textSize="19sp"/>

						<EditText
							android:id="@+id/ra"
							android:layout_width="wrap_content"
							android:inputType="numberDecimal"
							android:layout_height="wrap_content"
							android:ems="3"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/dm"
							android:textSize="18sp"/>

					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_marginTop="10dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/pip"
							android:textSize="19sp"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/piValue"
							android:textSize="18sp"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/speedSigle"
							android:textSize="19sp"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/wht"
							android:textSize="18sp"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/formula"
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="40dp"
					android:layout_alignParentEnd="true"
					android:layout_gravity="right"
					android:layout_marginEnd="20dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/fm"
						android:textSize="20sp"
						android:layout_gravity="center"/>

					<TextView
						android:id="@+id/speed"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/fluid_flow_speed2_formula"
						android:textSize="19sp"
						android:layout_gravity="center"
						android:background="@drawable/edge_btn_1"
						android:ems="7"
						android:gravity="center"/>

				</LinearLayout>

			</RelativeLayout>

			<LinearLayout
				android:id="@+id/resulucao"
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="105dp"
				android:layout_centerHorizontal="true"
				android:background="@drawable/background_1"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:layout_marginTop="220dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/res"
					android:textSize="20sp"
					android:layout_gravity="center"/>

				<HorizontalScrollView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal">

					<TextView
						android:id="@+id/res"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="19sp"/>

				</HorizontalScrollView>

			</LinearLayout>

		</RelativeLayout>

	</ScrollView>

</LinearLayout>

