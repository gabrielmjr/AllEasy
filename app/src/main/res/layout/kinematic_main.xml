<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/auto-res"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".physic.kinematic.Kinematic_ActivityMain"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/main_background"
	android:orientation="vertical">

	<include
		layout="@layout/action_bar"/>

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/kinematic_main_tv1"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/uniform_rectilinear_movement"
				android:layout_alignParentTop="true"
				android:textColor="@color/textColor"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

			<TextView
				android:id="@+id/tv1"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/displacementS"
				android:layout_below="@id/kinematic_main_tv1"
				app:autoSizeTextType="uniform"
				android:layout_marginTop="10dp"
				android:textSize="16sp"
				android:textColor="@color/textColor"
				android:layout_alignParentStart="true"/>

			<LinearLayout
				android:id="@+id/mru_vDisplacement1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/tv1"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_displacement1"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/mru_vDisplacement2"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/mru_vDisplacement1"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_displacement2"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/mru_vDisplacement3"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/mru_vDisplacement2"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_displacement3"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/mru_initial_displacement"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/mru_vDisplacement3"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_initial_displacement"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/mru_final_displacement"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/mru_initial_displacement"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_final_displacement"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/mru_displacement_law"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/mru_final_displacement"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_displacement_law"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<View
				android:id="@+id/view1"
				android:background="?android:attr/dividerVertical"
				android:layout_height="1dp"
				android:layout_width="match_parent"
				android:layout_below="@id/mru_displacement_law"/>

			<TextView
				android:id="@+id/tv2"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/velocityS"
				android:layout_below="@id/view1"
				app:autoSizeTextType="uniform"
				android:layout_marginTop="20dp"
				android:textSize="16sp"
				android:textColor="@color/textColor"
				android:layout_alignParentStart="true"/>

			<LinearLayout
				android:id="@+id/mru_speed_law1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/tv2"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_speed1"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/mru_speed_law2"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/mru_speed_law1"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_speed2"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<View
				android:id="@+id/view2"
				android:background="?android:attr/dividerVertical"
				android:layout_height="1dp"
				android:layout_width="match_parent"
				android:layout_below="@id/mru_speed_law2"/>

			<TextView
				android:id="@+id/tv3"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/timeS"
				android:layout_below="@id/view2"
				app:autoSizeTextType="uniform"
				android:layout_marginTop="20dp"
				android:textSize="16sp"
				android:textColor="@color/textColor"
				android:layout_alignParentStart="true"/>

			<LinearLayout
				android:id="@+id/mru_time1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/tv3"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_time1"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/mru_time2"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/mru_time1"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_time2"
					android:textSize="18sp"
					android:textColor="@color/textColor"
					android:id="@+id/time2"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/mru_time3"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/mru_time2"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_time3"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/mru_initial_time"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/mru_time3"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_initial_time"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/mru_final_time"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/mru_initial_time"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_mru_final_time"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<TextView
				android:id="@+id/tv4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_below="@id/mru_final_time"
				android:layout_marginTop="30dp"
				android:text="@string/variated_uniform_movementS"
				android:textColor="@color/textColor"/>

			<TextView
				android:id="@+id/tv5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/accelerationS"
				android:textColor="@color/textColor"
				android:layout_below="@id/tv4"
				android:textSize="16sp"
				android:layout_marginTop="10dp"/>

			<LinearLayout
				android:id="@+id/muv_acceleration1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/tv5"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_muv_acceleration1"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/muv_acceleration2"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/muv_acceleration1"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_muv_acceleration2"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/muv_acceleration3"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/muv_acceleration2"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_muv_acceleration3"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/muv_acceleration4"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/muv_acceleration3"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_muv_acceleration4"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<TextView
				android:id="@+id/tv7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/velocityS"
				android:textColor="@color/textColor"
				android:layout_below="@id/muv_acceleration4"
				android:textSize="16sp"
				android:layout_marginTop="20dp"/>

			<LinearLayout
				android:id="@+id/muv_speed1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/tv7"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_muv_speed1"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/muv_speed2"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/muv_speed1"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_muv_speed2"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/muv_speed3"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/muv_speed2"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_muv_speed3"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/muv_speed4"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_below="@id/muv_speed3"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:background="@drawable/background_2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/kinematic_muv_speed4"
					android:textSize="18sp"
					android:textColor="@color/textColor"/>

			</LinearLayout>

		</RelativeLayout>

	</ScrollView>

</LinearLayout>

